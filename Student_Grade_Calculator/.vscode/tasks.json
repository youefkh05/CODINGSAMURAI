{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile C++",
            "type": "shell",
            "command": "g++",
            "args": [
                "-o",
                "output", // Change this to your preferred output file name
                "*.cpp" // This compiles all .cpp files in the current directory
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run Program",
            "type": "shell",
            "command": "./output.exe", // Change this to match your output file name
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}
